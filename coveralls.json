{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "def.+(.+\/\/.+).+do"
  ],

  "skip_files": [
    "lib/api.ex",
    "lib/api/endpoint.ex",
    "lib/api/repo.ex",
    "web/gettext.ex",
    "web/web.ex",
    "test/support/conn_case.ex",
    "test/support/model_case.ex"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/"
  }
}